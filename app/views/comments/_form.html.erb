<%= form_for [@event, comment], data: { turbo: false } do |f| %>
  <%= render partial: 'partials/form_errors', locals: {model: comment} %>

  <div class="form-group buffer-both">
    <%= f.label :body, class: "form-label" %>
    <%= f.text_area :body, class: 'form-control' %>
  </div>

  <% unless user_signed_in? %>
    <div class="form-group buffer-both">
      <%= f.label :user_name, class: "form-label" %>
      <%= f.text_field :user_name, class: 'form-control' %>
    </div>
  <% end %>

  <div class="actions buffer-both">
    <%= f.submit t('button.send'), class: 'btn btn-primary' %>
  </div>
<% end %>
