<%- if controller_name != 'sessions' %>
  <%= link_to t('devise.sessions.new'), new_session_path(resource_name), class: "link-primary text-decoration-none" %><br />
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to t('devise.registrations.new'), new_registration_path(resource_name), class: "link-primary text-decoration-none" %><br />
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to t('devise.passwords.new'), new_password_path(resource_name), class: "link-secondary text-decoration-none" %><br />
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to t('devise.confirmations.new'), new_confirmation_path(resource_name), class: "link-secondary text-decoration-none" %><br />
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <p><%= button_to "#{t('button.sign_in_with')} #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false }, class: 'btn btn-outline-primary btn-sm' %></p>
  <% end %>
<% end %>
