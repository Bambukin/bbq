<h2>Вход</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group buffer-both col-md-6">
    <%= f.label :email, class: "form-label" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
  </div>

  <div class="form-group buffer-both col-md-6">
    <%= f.label :password, "Пароль", class: "form-label" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="form-check buffer-both">
      <%= f.check_box :remember_me, class: "form-check-input" %>
      <%= f.label :remember_me, "Запомнить меня", class: "form-label" %>
    </div>
  <% end %>

  <div class="form-group buffer-both">
    <%= f.submit "Войти", class: 'btn btn-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
