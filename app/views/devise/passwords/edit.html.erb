<h2><%= t('devise.passwords.edit') %></h2>

<div class="col-md-6 buffer-top">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render partial: 'partials/form_errors', locals: { model: resource } %>
    <%= f.hidden_field :reset_password_token %>

    <div class="form-group buffer-both">
      <%= f.label :password, I18n.t('devise.passwords.new_password'), class: "form-label" %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'form-control' %>
      <% if @minimum_password_length %>
        <div class="form-text fst-italic">
          <%= t('devise.passwords.password_too_short', count: @minimum_password_length) %>
        </div>
      <% end %>
    </div>

    <div class="form-group buffer-both">
      <%= f.label :password_confirmation, I18n.t('devise.passwords.new_password_confirmation'), class: "form-label" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
    </div>

    <div class="form-group buffer-both">
      <%= f.submit I18n.t('button.change_password'), class: 'btn btn-primary' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
