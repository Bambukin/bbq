<%= form_for(@event) do |f| %>
  <%= render partial: 'partials/form_errors', locals: {model: @event} %>

  <div class="form-group buffer-both">
    <%= f.label :title, class: "form-label" %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group buffer-both">
    <%= f.label :address, class: "form-label" %>
    <%= f.text_field :address, class: 'form-control' %>
  </div>

  <div class="form-group buffer-both">
    <%= f.label :datetime, class: "form-label" %>
    <p><%= f.datetime_select :datetime, class: 'form-control' %></p>
  </div>

  <div class="form-group buffer-both">
    <%= f.label :description, class: "form-label" %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>

  <div class="actions buffer-both">
    <%= f.submit t('button.save'), class: 'btn btn-primary' %>
    <%= t('link.or') %>
    <%= link_to t('link.back'), :back %>
  </div>
<% end %>
