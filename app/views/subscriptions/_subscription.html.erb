<div class="buffer-bottom border border-secondary-subtle rounded px-3 py-1">
  <div class="subscription icon d-flex justify-content-between align-items-center">
    <div>
    <% if subscription.user.present? %>
      <%= render partial: 'users/user', object: subscription.user %>
    <% else %>
      <em><%= subscription.user_name %></em>
    <% end %>
    </div>
    <% if current_user_can_edit?(subscription) %>
    <%= button_to(
          '', event_subscription_path(subscription.event, subscription),
          method: :delete, data: { confirm: t('.destroy_confirm'), turbo_confirm: t('.destroy_confirm') },
          class: "btn-close btn-outline-secondary"
        ) %>
    <% end %>
  </div>
</div>
