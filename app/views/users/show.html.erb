<div class="text-center">
  <h1><%= @user.name %></h1>

  <%= image_tag user_avatar_thumb(@user), class: 'rounded castom-avatar', title: @user.name %>

  <% if @user == current_user %>
    <p class="buffer-top">
      <%= link_to t('link.edit_profile'), edit_user_path(@user), class: 'btn btn-sm btn-outline-secondary' %>
    </p>
  <% end %>
</div>

<div class="row">
  <div class="col-md-12">
    <% if @user.events.any? %>
      <h3><%= t('users.user.events') %></h3>
      <div class="row">
        <%= render partial: 'events/event', collection: @user.events %>
      </div>
    <% else %>
      <p class="buffer-top"><%= t('users.user.no_events') %></p>
    <% end %>
  </div>
</div>
