<div class="modal fade" id=<%= id %> data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog modal-sm modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="staticBackdropLabel"><%= title %></h1>
        <%= button_tag('', class: "btn-close", data: { bs_dismiss: "modal" }) %>
      </div>
      <div class="modal-footer">
        <%= button_tag(t('button.n'), class: "btn btn-secondary", data: { bs_dismiss: "modal" }) %>
        <%= button_to(t('button.y'),
                      path,
                      method: :delete,
                      class: "btn btn-danger") %>
      </div>
    </div>
  </div>
</div>
