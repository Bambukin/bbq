<div class="event-photo buffer-both">
  <div class="icon d-flex justify-content-between align-items-center">
    <div class="d-flex align-items-center flex-column">
    <%= link_to image_tag(photo.photo.thumb.url), photo.photo.url %>
    <p class="buffer-top"><%= render partial: 'users/user', object: photo.user %></p>
    </div>
    <% if current_user_can_edit?(photo) %>
      <%= button_to(
            '', event_photo_path(photo.event, photo),
            method: :delete, data: { confirm: t('.destroy_confirm'), turbo_confirm: t('.destroy_confirm') },
            class: "btn-close btn-outline-secondary"
          ) %>
    <% end %>
  </div>
</div>
