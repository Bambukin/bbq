<div class="img-wrap">
  <% if current_user_can_edit?(photo) %>
    <span class="close-icon-my">
      <%= button_to('', event_photo_path(photo.event, photo),
                    method: :delete,
                    data: { confirm: t('.destroy_confirm'), turbo_confirm: t('.destroy_confirm') },
                    class: "btn-close btn-outline-secondary") %>
    </span>
  <% end %>

  <div class="image-container pswp-gallery__item">
    <%= link_to image_tag(photo.photo.variant(:thumb), class: "figure-img img-fluid rounded"),
                photo.photo,
                data: {
                  pswp_width: photo.photo.metadata["width"],
                  pswp_height: photo.photo.metadata["height"],
                  cropped: "true"
                } %>
    <div class="hidden-caption-content">
      <%= link_to photo.user.name, photo.user %>
    </div>
  </div>
</div>
